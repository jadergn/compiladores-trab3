/*
Código que recebe um inteiro e diz se esse inteiro, que é uma idade, é adulto, idoso ou jovem.
*/

//inicio do algoritomo
algoritmo idade;

//variáveis
variáveis
	idade,a,b,a1a: inteiro;
	nome,g,h,i,j: literal;
	k,l,m,n,aa1: real;
fim-variáveis

função faixa_etaria(idade: inteiro) : literal
início
	se idade >= 18 então
		se idade < 60 então
			retorne "adulto";
		senão
			retorne "idoso";
		fim-se
	senão
		retorne "jovem";
	fim-se
fim

função faixa_etaria_2() : literal
início
	retorne "2";
fim

função faixa_etaria_3() : literal
início
	retorne "3";
fim

//inicio do programa
início
	//imprima("Digita seu nome:");
	nome := leia();
    
	//imprima(nome, ", digite sua idade:");
	idade := leia();

	//operador SE / ENTÃO / SENÃO
	imprima("Nome:", nome, " / Faixa etária: ", faixa_etaria(idade));
fim

